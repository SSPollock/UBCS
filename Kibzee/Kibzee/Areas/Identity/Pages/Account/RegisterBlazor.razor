@page "/Identity/Account/RegisterBlazor"
@inject IJSRuntime  JSRuntime

<h1>Register here (using Blazor)</h1>

<div class="row">
    <div class="col-md-4">
        <h4>Create a new account.</h4>
        <hr />
        <EditForm Model="@_inputModel" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label>
                    Email Address:
                    <InputText id="email" @bind-Value="_inputModel.Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group">
                <label>
                    Create a Password:
                    <InputText id="password" @bind-Value="_inputModel.Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group">
                <label>
                    Confirm Password:
                    <InputText id="confirmpassword" @bind-Value="_inputModel.ConfirmPassword" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </label>
            </div>
            <button type="submit">Submit</button>
        </EditForm>
    </div>
</div>

@code {
    private RegisterBlazorModel.InputModel _inputModel =
        new RegisterBlazorModel.InputModel();

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }
}
